<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <servlet>
        <servlet-name>AddProductServlet</servlet-name>
        <servlet-class>ua.pp.kaeltas.AddProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ua.pp.kaeltas.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminPanelServlet</servlet-name>
        <servlet-class>ua.pp.kaeltas.AdminPanelServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>ua.pp.kaeltas.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserPanelServlet</servlet-name>
        <servlet-class>ua.pp.kaeltas.UserPanelServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToShoppingCartServlet</servlet-name>
        <servlet-class>ua.pp.kaeltas.AddToShoppingCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteFromShoppingCartServlet</servlet-name>
        <servlet-class>ua.pp.kaeltas.DeleteFromShoppingCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommitOrderServlet</servlet-name>
        <servlet-class>ua.pp.kaeltas.CommitOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowOrdersServlet</servlet-name>
        <servlet-class>ua.pp.kaeltas.ShowOrdersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteOrderServlet</servlet-name>
        <servlet-class>ua.pp.kaeltas.DeleteOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProductServlet</servlet-name>
        <servlet-class>ua.pp.kaeltas.DeleteProductServlet</servlet-class>
    </servlet>
    <!--<servlet>
        <servlet-name>AlterDbServlet</servlet-name>
        <servlet-class>ua.pp.kaeltas.AlterDbServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AlterDbServlet</servlet-name>
        <url-pattern>/alterdb</url-pattern>
    </servlet-mapping>-->
    <servlet-mapping>
        <servlet-name>AddProductServlet</servlet-name>
        <url-pattern>/addproduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminPanelServlet</servlet-name>
        <url-pattern>/adminpanel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserPanelServlet</servlet-name>
        <url-pattern>/userpanel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToShoppingCartServlet</servlet-name>
        <url-pattern>/addtoshoppingcart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteFromShoppingCartServlet</servlet-name>
        <url-pattern>/deletefromshoppingcart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommitOrderServlet</servlet-name>
        <url-pattern>/commitorder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowOrdersServlet</servlet-name>
        <url-pattern>/showorders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteOrderServlet</servlet-name>
        <url-pattern>/deleteorder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProductServlet</servlet-name>
        <url-pattern>/deleteproduct</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
</web-app>